@model Browser_RPG_Game.Models.Message

@{
    ViewBag.Title = "Edit";
}

<h2>Wiadomość</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Do: @Model.Receiver.Name</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.ReceiverID)
        @Html.HiddenFor(model => model.SenderID)


        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Tytuł", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, "Treść", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea class="form-control valid" data-val="true" data-val-required="Pole Treść jest wymagane." id="Content" name="Content" aria-describedby="Content-error" aria-invalid="false" required>@Model.Content</textarea>
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Wyślij" class="btn btn-success ml-auto mr-auto" />
            </div>
        </div>
    </div>
}

<div class="row ml-3">
    @Html.ActionLink("Powrót", "Details", new { ID = Model.ID }, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
