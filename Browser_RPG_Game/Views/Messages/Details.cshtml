@model Browser_RPG_Game.Models.Message

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row col-12 ml-auto mr-auto">
    <div class="col-sm-3 ml-auto mr-auto text-center">
        @if (Model.Receiver.Login != User.Identity.Name)
        {
            <b>Odbiorca</b>
        }
        else
        {
            <b>Nadawca</b>
        }
    </div>
    <div class="col-sm-5 ml-auto mr-auto text-center">
        <b>Temat</b>
    </div>
    <div class="col-sm-3 ml-auto mr-auto text-center">
        <b>Data</b>
    </div>
    <div class="col-sm-1 ml-auto mr-auto text-right">
        <b>Odczytana</b>
    </div>
</div>
<hr />
<div class="row col-12 ml-auto mr-auto">
    <div class="col-sm-3 ml-auto mr-auto">
        @if (Model.Receiver.Login != User.Identity.Name)
        {
            @Model.Receiver.Name
        }
        else
        {
            @Model.Sender.Name
        }
    </div>
    <div class="col-sm-5 ml-auto mr-auto text-center">
        @Model.Title
    </div>
    <div class="col-sm-3 ml-auto mr-auto text-center">
        @Model.SendDate
    </div>
    <div class="col-sm-1 ml-auto mr-auto text-right">
        @if (Model.Readed)
        {
            <input type="checkbox" disabled="disabled" checked="checked" />
        }
        else
        {
            <input type="checkbox" disabled="disabled" />
        }
    </div>
</div>
<div class="row col-12 ml-auto mr-auto">
    <div class="col-12 ml-auto mr-auto">
        <p class="text-center m-auto">@Model.Content</p>
    </div>
</div>
<hr />
<div class="row ml-auto mr-auto">
    @if (Model.Sender.Login != User.Identity.Name)
    {
        @Html.ActionLink("Odpowiedz", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary ml-auto mr-auto" })
    }
    @Html.ActionLink("Usuń", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger ml-auto mr-auto" })

    @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-secondary ml-auto mr-auto" })
</div>
