<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        /* The container <div> - needed to position the dropdown content */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Dropdown Content (Hidden by Default) */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Links inside the dropdown */
            .dropdown-content a {
                color: black;
                text-decoration: none;
                display: block;
                padding-top: 5px;
                padding-bottom: 5px;
                padding-left: 5px;
            }

                /* Change color of dropdown links on hover */
                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (!Request.IsAuthenticated)
                {
                    @Html.ActionLink("Game", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Postać", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sklep", "Index", "Store")</li>
                        <li>@Html.ActionLink("Wyprawa", "Index", "Expedition")</li>
                        <li>@Html.ActionLink("Arena", "Index", "Arena")</li>
                        <li>@Html.ActionLink("Posiadłości", "Estate", "Buildings")</li>
                    }
                    @if (Context.User.IsInRole("ADMIN"))
                    {
                        <li class="dropdown">
                            <a href="#">Admin</a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Configs", "Index", "Configs")
                                @Html.ActionLink("Buildings", "Index", "Buildings")
                                @Html.ActionLink("Materials", "Index", "Materials")
                                @Html.ActionLink("News", "Index", "Bulletins")
                                @Html.ActionLink("Character buildings", "Index", "CharacterBuildings")
                                @Html.ActionLink("Character images", "Index", "CharacterImages")
                                @Html.ActionLink("Characters", "Index", "Characters")
                                @Html.ActionLink("Enemies", "Index", "Enemies")
                                @Html.ActionLink("Item loots", "Index", "ItemLoots")
                                @Html.ActionLink("Items", "Index", "Items")
                                @Html.ActionLink("Item types", "Index", "ItemTypes")
                                @Html.ActionLink("Locations", "Index", "Locations")
                                @Html.ActionLink("Messages", "Index", "Messages")
                                @Html.ActionLink("Profile types", "Index", "ProfileTypes")
                            </div>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Rafał Sekular &copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
