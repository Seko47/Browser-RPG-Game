@model IEnumerable<Browser_RPG_Game.Models.CharacterImage>

@{
    ViewBag.Title = "CharacterImages Index";
}

    <h2>CharacterImages</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PathToImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.PathToImage)" alt="Character image" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PathToImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
