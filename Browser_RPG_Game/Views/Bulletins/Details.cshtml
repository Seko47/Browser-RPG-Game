@model Browser_RPG_Game.Models.Bulletin

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bulletin</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Character.Login)
        </dd>

        <dt>
            Tytuł
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Treść
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contents)
        </dd>

        <dt>
            Data wstawienia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = @Model.ID }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-secondary" })
</p>
