@model IEnumerable<Browser_RPG_Game.Models.ItemLoot>

@{
    ViewBag.Title = "ItemLoots Index";
}

    <h2>ItemLoots</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DropChance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enemy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DropChance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enemy.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
